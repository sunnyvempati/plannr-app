<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Type</th>
    <th>Phone</th>
    <th>Company</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.name %></td>
      <td><%= contact.email %></td>
      <td><%= contact.contact_type_before_type_cast %></td>
      <td><%= contact.phone %></td>
      <td><%= contact.company %></td>
      <td><%= contact.description %></td>
      <td><%= link_to 'Show', contact %></td>
      <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
      <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= react_component('ContactActionButton', path:new_contact_path, prerender: true) %>

