<!DOCTYPE html>
<html>
<head>
  <title>Plannr - Welcome</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!--
  Needed for Hamburger menu
  Strict order of HTML tags
  Ask Sunny before moving these tags
  -->
  <input type="checkbox" id="menu-trigger" class="Hamburger-trigger"></input>
  <label for="menu-trigger">
    <i class="fa fa-bars Hamburger-icon"></i>
  </label>

  <div class="Menu">
    <%= react_component('Menu', name: current_user.profile.full_name,
                                email: current_user.email,
                                path:request.fullpath,
                                prerender: true) %>
  </div>

  <!-- Mask for when Menu is open -->
  <div class="Mask" onClick="document.getElementById('menu-trigger').checked = false;"></div>

  <div class="MainContainer">
    <div class="MainContainer-pageHeader" data-0="height:168px" data-56="height:64px">
      <div class="PageHeader-title" data-56="padding-top:24px;font-size:34px;" data-57="font-size:20px;padding-top:0px;margin:auto;">
        <%= @header %>
      </div>
      <div class="PageHeader-appBar">
        <i class="fa fa-search PageHeader-appBarItem"></i>
        <a rel="nofollow" data-method="delete" href="/user_session" class="icon fa fa fa-sign-out PageHeader-appBarItem"></a>
      </div>
    </div>
    <div class="MainContainer-content">
      <%= yield %>
    </div>
  </div>
  <script type="text/javascript">
    var s = skrollr.init({forceHeight: false});
  </script>
</body>
</html>
