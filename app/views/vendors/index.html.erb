<p id="notice"><%= notice %></p>

<h1>Listing Vendors</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Phone</th>
    <th>Primary Contact</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @vendors.each do |vendor| %>
    <tr>
      <td><%= vendor.name %></td>
      <td><%= vendor.location %></td>
      <td><%= vendor.phone %></td>
      <td><%= vendor.primary_contact %></td>
      <td><%= link_to 'Show', vendor %></td>
      <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
      <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= react_component('VendorActionButton', path:new_vendor_path, prerender: true) %>

