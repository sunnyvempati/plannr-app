<% content_for :body_content do %>
  <table>
    <tr>
      <td>
        <h3>Hi <%= @assigned_to_name %></h3>
        <p class="lead"><%= @assigned_from_name %> assigned you a task</p>
        <p class="lead"><%= @task.name %></p>
        <table>
          <tr>
            <td class="column_name">Description</td>
            <td><%= @task.description %></td>
          </tr>
          <tr>
            <td class="column_name">Event</td>
            <td><%= @event_name %></td>
          </tr>
        </table>
        <br />
        <!-- Callout Panel -->
        <p class="callout">
          <a href=<%= @url %>>Go to tasks</a>
        </p><!-- /Callout Panel -->

        <%= render partial: "mailer_partials/social_and_contact" %>

      </td>
    </tr>
  </table>
<% end %>

<%= render partial: "mailer_partials/shell", locals: { title: "Task has been assigned to you!" } %>
